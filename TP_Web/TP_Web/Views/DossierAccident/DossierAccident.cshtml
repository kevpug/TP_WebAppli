@model FermerDossierAccidentModèle
@{
    ViewData["Title"] = "Fermeture dossier accident";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Fermeture d'un dossier d'accident</h4>
        <form asp-action="DossierAccident" method="post" class="m-2">
            <div class="form-group">
                <label asp-for="DossierID">Numéro du dossier d'accident : </label>
                <input asp-for="DossierID" class="form-control" />
                <div><span asp-validation-for="DossierID" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="NuméroPermisConduire">Numéro de permis du client : </label>
                <input asp-for="NuméroPermisConduire" class="form-control" />
                <div><span asp-validation-for="NuméroPermisConduire" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="NuméroVoiture">Numéro de la voiture : </label>
                <input asp-for="NuméroVoiture" class="form-control" />
                <div><span asp-validation-for="NuméroVoiture" class="text-danger"></span></div>
            </div>
            <button type="submit" class="btn btn-primary">Finaliser le dossier</button>
        </form>
    </div>
</div>

