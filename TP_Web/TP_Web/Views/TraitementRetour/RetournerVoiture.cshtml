@model RetourVoitureModèle
@{
    ViewData["Title"] = "Retourner une voiture";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Traitement du retour</h4>
        <form asp-action="RetournerVoiture" method="post" class="m-2">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="NuméroVoiture">Numéro de la voiture:</label>
                    <input asp-for="NuméroVoiture" class="form-control" />
                    <div><span asp-validation-for="NuméroVoiture" class="text-danger"></span></div>
                </div>
                <div><span asp-validation-for="NuméroVoiture" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="NouveauMillage">Nouveau millage:</label>
                    <input asp-for="NouveauMillage" class="form-control" />
                    <div><span asp-validation-for="NouveauMillage" class="text-danger"></span></div>
                </div>
                <div><span asp-validation-for="NouveauMillage" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="NuméroPermisConduire">Numéro du permis de conduire:</label>
                    <input asp-for="NuméroPermisConduire" class="form-control" />
                    <div><span asp-validation-for="NuméroPermisConduire" class="text-danger"></span></div>
                </div>
                <div><span asp-validation-for="NuméroPermisConduire" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="SuccursaleDeRetour">Numéro succursale de retour:</label>
                    <input asp-for="SuccursaleDeRetour" class="form-control" />
                    <div><span asp-validation-for="SuccursaleDeRetour" class="text-danger"></span></div>
                </div>
                <div><span asp-validation-for="SuccursaleDeRetour" class="text-danger"></span></div>
            </div>
            <button type="submit" class="btn btn-primary">Suivant</button>
        </form>
    </div>
</div>