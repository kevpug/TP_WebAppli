@model ModèleLogin
@{
    ViewData["Title"] = "Page d'authentification";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Veuillez entrer vos informations d'authentification</h4>
        <form asp-action="Authentification" method="post" class="m-2">

            <div class="form-group">
                <label asp-for="CodeUtilisateur">Code d'utilisateur :</label>
                <input asp-for="CodeUtilisateur" class="form-control" />
                <div><span asp-validation-for="CodeUtilisateur" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="MDP">Mot de passe :</label>
                <input asp-for="MDP" type="password" class="form-control" />
                <div><span asp-validation-for="MDP" class="text-danger"></span></div>
            </div>
            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    </div>
</div>

