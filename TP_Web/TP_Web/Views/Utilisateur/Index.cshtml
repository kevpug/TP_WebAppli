@model IEnumerable<IdentityUser>

<div class="bg-primary panel-body"><h4>Comptes utilisateurs</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-condensed table-bordered">
    <tr><th>ID</th><th>Nom</th><th>Courriel</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">Aucun compte utilisateur</td></tr>
    }
    else
    {
        foreach (IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="SupprimerUtilisateur" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="MÀJUtilisateur" asp-route-id="@user.Id">
                            MÀJ
                        </a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Supprimer
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="CréerUtilisateur">Créer</a>
