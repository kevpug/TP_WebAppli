@model Utilisateur
@{ Layout = "_Layout"; }



<!DOCTYPE html>


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Veuillez entrer vos informations d'authentification</h4>
        <form asp-action="Authentification" method="post" class="m-2">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="NomUtilisateur">Nom d'utilisateur :</label>
                <input asp-for="NomUtilisateur" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MotDePasse">Mot de passe :</label>
                <input asp-for="MotDePasse" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    </div>
</div>

