@model Utilisateur
@{

}
<partial name="_Validation"   />

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Création d'un utilisateur</h4>
        <form asp-action="FormulaireAjouterUtilisateur" method="post" class="htmlform">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomUtilisateur">Nom d'utilisateur :</label>
                <div><span asp-validation-for="NomUtilisateur" class="text-danger"></span></div>
                <input asp-for="NomUtilisateur" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MotDePasse">Mot de passe :</label>
                <div><span asp-validation-for="MotDePasse" class="text-danger"></span></div>
                <input asp-for="MotDePasse" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Créer l'utilisateur</button>
        </form>
    </div>
</div>

